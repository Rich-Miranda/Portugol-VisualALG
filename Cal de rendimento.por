programa {
  funcao inicio() {
    
    real n1, totalFinal, rendimento

    //VAI RECEBER UM VALOR
    escreva("Informe um valor :")
    leia(n1)


    //VAI CALCULANDO O VALOR JUNTO COM A TAXA DE %0.70
    rendimento = n1*0.007


    //CALCULAR O VALOR DA FINAL APOS UM MES.
    totalFinal = n1 + rendimento



      escreva("VALOR COM RENDIMENTO APOS UM MES E DE: "+ totalFinal)
  }
}
